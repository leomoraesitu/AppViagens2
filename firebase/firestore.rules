rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /viagens/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /assets/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /assets/{parent}/backgrounds/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/backgrounds/{document} {
      allow read: if true;
    }

  }
}
